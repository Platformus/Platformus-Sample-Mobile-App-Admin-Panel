@model MyApp.Backend.ViewModels.Categories.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Category"] : this.Localizer["Edit Category"]);
  this.ViewBag.ActiveMenuItem = "categories";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/categories">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <multilingual-single-line-text-field for="Name" localizations="this.Model.NameLocalizations" />
  <integer-field for="Position" />
</form>