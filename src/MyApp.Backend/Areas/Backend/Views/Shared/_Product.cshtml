@model MyApp.Backend.ViewModels.Shared.ProductViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row href="/backend/products/edit/@Model.Id">
  <cell>@Model.Category.Name</cell>
  <cell>@Model.Name</cell>
  <cell>@Model.Price.ToString("0.00")</cell>
  <row-controls>
    <delete-button href="/backend/products/delete/@Model.Id"></delete-button>
  </row-controls>
</row>